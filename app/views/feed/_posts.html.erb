<div class="w-full max-w-xl mx-auto bg-white rounded-2xl shadow-md mt-10 overflow-hidden">
  <%= image_tag(posts.images.first, class: "w-full h-76 object-cover object-top	") if posts.images.any?%>

  <div class="p-4 space-y-2">
    <div class="flex items-center space-x-3">
      <div class="w-10 h-10 rounded-full bg-gray-300 flex items-center justify-center text-slate-600 font-bold">
        <%= posts.user.email.first.upcase %>
      </div>
      <div>
        <p class="text-sm font-semibold text-slate-700"><%= posts.user.email %></p>
        <p class="text-xs text-gray-400">hace <%= time_ago_in_words(posts.created_at) %></p>
      </div>
    </div>

    <p class="text-xl font-semibold text-slate-800"><%= posts.caption %></p>
    <p class="text-xl"> <%= posts.body&.body.to_plain_text&.first(120) %> ...</p>
  </div>
</div>
