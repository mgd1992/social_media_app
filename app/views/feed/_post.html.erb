<div class="flex flex-col gap-3">

  <div class="w-full max-w-3xl mx-auto bg-white rounded-lg shadow-md mt-10 relative">
    <%= image_tag(post.images.first, class: "w-full h-76 object-cover object-center rounded-lg") if post.images.any?%>

    <div class="p-4 space-y-2">
      <div class="flex items-center space-x-3 mb-4">
        <div class="w-10 h-10 rounded-full bg-gray-300 flex items-center justify-center text-slate-600 font-bold">
          <%= post.user.email.first.upcase %>
        </div>
        <div>
          <p class="text-sm font-semibold text-slate-700"><%= post.user.username %></p>
          <p class="text-xs text-gray-400">hace <%= time_ago_in_words(post.created_at) %></p>
        </div>
      </div>

      <p class="text-xl font-semibold text-slate-800"><%= post.caption %></p>
      <div class="w-140">
        <p class="text-xl"> <%= post.feed_limit_body %><%= '...' if post.feed_body_dots? %></p>
      </div>
    </div>

    <div data-controller="dropdown" data-action="click@window->dropdown#closeUnlessDropdown">


      <div class="absolute bottom-4 right-4 flex flex-col items-center justify-center" >

        <%= link_to "#", data: { action: "dropdown#toggle" } do %>
          <%= render "reactions", post: post, user: current_user %>
        <% end %>

        <div class="flex gap-2 items-center">
          <% if post.heart_reactions.any? %>
