<div class="w-full flex flex-col items-center pt-24">
  <div class="max-w-5xl w-full mx-auto">
    <%= turbo_frame_tag @post, :comments do %>
      <%= form_with model: [@post, @post.comments.new] do |f| %>
        <div class="flex flex-col w-full">
          <%= f.text_area :body, class: "outline-none bg-white rounded-lg shadow-md px-2 ", placeholder: "Ingresar comentario" %>
        </div>
        <div class="flex w-full justify-between items-center">
          <%= link_to "Cancelar","/", class:"p-2 rounded-xl bg-gray-300 text-white mt-2 hover:bg-gray-700" %>
          <%= f.submit "Comentar", class:"p-2 rounded-xl bg-green-300 text-green-50 mt-2 hover:bg-green-500 cursor-pointer" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
